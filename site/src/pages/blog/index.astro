---
/**
 * Blog Index Page - Lista de posts
 */
import Base from '../../layouts/Base.astro'

const API_URL = import.meta.env.PUBLIC_API_URL || 'https://cms-site-api.planacacabamentos.workers.dev'

let settings: any = {}
let posts: any[] = []
let categories: any[] = []

try {
  const [settingsRes, postsRes, categoriesRes] = await Promise.all([
    fetch(`${API_URL}/api/public/settings`),
    fetch(`${API_URL}/api/public/posts?limit=12`),
    fetch(`${API_URL}/api/public/categories`),
  ])

  if (settingsRes.ok) settings = (await settingsRes.json()).data || {}
  if (postsRes.ok) posts = (await postsRes.json()).data || []
  if (categoriesRes.ok) categories = (await categoriesRes.json()).data || []
} catch (error) {
  console.error('Error fetching blog data:', error)
}

const siteName = settings.site_name || 'CMS Site'

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('pt-BR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  })
}
---

<Base
  title={`Blog | ${siteName}`}
  description="Confira as √∫ltimas novidades, dicas e artigos do nosso blog."
>
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        Confira as √∫ltimas novidades, dicas e artigos
      </p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <div class="flex-1">
          {posts.length === 0 ? (
            <div class="text-center py-16">
              <div class="w-16 h-16 mx-auto text-gray-300 mb-4">üìù</div>
              <h2 class="text-2xl font-bold text-gray-700 mb-2">Nenhum post ainda</h2>
              <p class="text-gray-500">Em breve teremos novidades por aqui!</p>
            </div>
          ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {posts.map((post, index) => (
                <article class={`group ${index === 0 ? 'md:col-span-2' : ''}`}>
                  <a href={`/blog/${post.slug}`} class="block">
                    <div class="bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow">
                      {post.featured_image && (
                        <div class="aspect-video overflow-hidden">
                          <img 
                            src={post.featured_image} 
                            alt={post.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading={index < 4 ? 'eager' : 'lazy'}
                          />
                        </div>
                      )}
                      <div class="p-6">
                        <div class="flex items-center gap-3 text-sm text-gray-500 mb-3">
                          {post.category_name && (
                            <span 
                              class="px-2 py-1 rounded-full text-xs font-medium text-white"
                              style={`background-color: ${post.category_color || '#6b7280'}`}
                            >
                              {post.category_name}
                            </span>
                          )}
                          <time datetime={post.published_at}>{formatDate(post.published_at)}</time>
                        </div>
                        <h2 class={`font-bold text-gray-900 group-hover:text-primary-600 transition-colors mb-2 ${index === 0 ? 'text-2xl' : 'text-xl'}`}>
                          {post.title}
                        </h2>
                        {post.excerpt && (
                          <p class="text-gray-600 line-clamp-2">{post.excerpt}</p>
                        )}
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          )}
        </div>

        <aside class="lg:w-80 space-y-8">
          {categories.length > 0 && (
            <div class="bg-gray-50 rounded-xl p-6">
              <h3 class="font-bold text-lg text-gray-900 mb-4">Categorias</h3>
              <ul class="space-y-2">
                {categories.map((category) => (
                  <li>
                    <a 
                      href={`/blog?category=${category.slug}`}
                      class="flex items-center justify-between py-2 text-gray-600 hover:text-primary-600 transition-colors"
                    >
                      <span class="flex items-center gap-2">
                        <span 
                          class="w-3 h-3 rounded-full"
                          style={`background-color: ${category.color}`}
                        ></span>
                        {category.name}
                      </span>
                      <span class="text-sm text-gray-400">{category.posts_count}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <div class="bg-primary-50 rounded-xl p-6">
            <h3 class="font-bold text-lg text-gray-900 mb-2">Newsletter</h3>
            <p class="text-gray-600 text-sm mb-4">
              Receba as novidades diretamente no seu email.
            </p>
            <form class="space-y-3">
              <input
                type="email"
                placeholder="seu@email.com"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500"
              />
              <button
                type="submit"
                class="w-full px-4 py-2 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
              >
                Assinar
              </button>
            </form>
          </div>
        </aside>
      </div>
    </div>
  </section>
</Base>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
