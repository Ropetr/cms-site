---
/**
 * Blog Index Page - Lista de posts
 */
import Base from '../../layouts/Base.astro'

const API_URL = import.meta.env.PUBLIC_API_URL || 'https://cms-site-api.planacacabamentos.workers.dev'

// Fetch settings e posts
let settings: any = {}
let theme: any = {}
let posts: any[] = []
let categories: any[] = []

try {
  const [settingsRes, themeRes, postsRes, categoriesRes] = await Promise.all([
    fetch(`${API_URL}/api/public/settings`),
    fetch(`${API_URL}/api/public/theme`),
    fetch(`${API_URL}/api/public/posts?limit=12`),
    fetch(`${API_URL}/api/public/categories`),
  ])

  if (settingsRes.ok) settings = (await settingsRes.json()).data || {}
  if (themeRes.ok) theme = (await themeRes.json()).data || {}
  if (postsRes.ok) posts = (await postsRes.json()).data || []
  if (categoriesRes.ok) categories = (await categoriesRes.json()).data || []
} catch (error) {
  console.error('Error fetching blog data:', error)
}

const siteName = settings.site_name || 'CMS Site'

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('pt-BR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  })
}
---

<Base
  title={`Blog | ${siteName}`}
  description="Confira as últimas novidades, dicas e artigos do nosso blog."
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-white/80 max-w-2xl mx-auto">
        Confira as últimas novidades, dicas e artigos
      </p>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Posts Grid -->
        <div class="flex-1">
          {posts.length === 0 ? (
            <div class="text-center py-16">
              <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <h2 class="text-2xl font-bold text-gray-700 mb-2">Nenhum post ainda</h2>
              <p class="text-gray-500">Em breve teremos novidades por aqui!</p>
            </div>
          ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {posts.map((post, index) => (
                <article class={`group ${index === 0 ? 'md:col-span-2' : ''}`}>
                  <a href={`/blog/${post.slug}`} class="block">
                    <div class={`bg-white rounded-xl shadow-sm overflow-hidden border border-gray-100 hover:shadow-lg transition-shadow ${index === 0 ? 'md:flex' : ''}`}>
                      {post.featured_image && (
                        <div class={`relative overflow-hidden ${index === 0 ? 'md:w-1/2 aspect-video md:aspect-auto' : 'aspect-video'}`}>
                          <img 
                            src={post.featured_image} 
                            alt={post.title}
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            loading={index < 3 ? 'eager' : 'lazy'}
                          />
                          {post.category_name && (
                            <span 
                              class="absolute top-4 left-4 px-3 py-1 text-white text-sm font-medium rounded-full"
                              style={`background-color: ${post.category_color || '#6b7280'}`}
                            >
                              {post.category_name}
                            </span>
                          )}
                        </div>
                      )}
                      <div class={`p-6 ${index === 0 ? 'md:w-1/2 md:flex md:flex-col md:justify-center' : ''}`}>
                        <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                          <time datetime={post.published_at}>
                            {formatDate(post.published_at)}
                          </time>
                          {post.views > 0 && (
                            <>
                              <span>•</span>
                              <span>{post.views} visualizações</span>
                            </>
                          )}
                        </div>
                        <h2 class={`font-bold text-gray-900 group-hover:text-primary-600 transition-colors ${index === 0 ? 'text-2xl md:text-3xl' : 'text-xl'}`}>
                          {post.title}
                        </h2>
                        {post.excerpt && (
                          <p class={`mt-3 text-gray-600 ${index === 0 ? '' : 'line-clamp-2'}`}>
                            {post.excerpt}
                          </p>
                        )}
                        <div class="mt-4 flex items-center gap-2 text-primary-600 font-medium">
                          Ler mais
                          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </div>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="lg:w-80 space-y-8">
          <!-- Categories -->
          {categories.length > 0 && (
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-4">Categorias</h3>
              <ul class="space-y-2">
                {categories.map((cat) => (
                  <li>
                    <a 
                      href={`/blog/categoria/${cat.slug}`}
                      class="flex items-center justify-between py-2 px-3 rounded-lg hover:bg-gray-50 transition-colors"
                    >
                      <span class="flex items-center gap-2">
                        <span 
                          class="w-3 h-3 rounded-full"
                          style={`background-color: ${cat.color || '#6b7280'}`}
                        />
                        {cat.name}
                      </span>
                      <span class="text-sm text-gray-400">{cat.posts_count || 0}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Newsletter -->
          <div class="bg-gradient-to-br from-primary-600 to-primary-800 rounded-xl p-6 text-white">
            <h3 class="text-lg font-bold mb-2">Newsletter</h3>
            <p class="text-white/80 text-sm mb-4">
              Receba as novidades diretamente no seu email.
            </p>
            <form class="space-y-3">
              <input 
                type="email" 
                placeholder="Seu melhor email"
                class="w-full px-4 py-2 rounded-lg text-gray-900 placeholder-gray-400"
              />
              <button 
                type="submit"
                class="w-full px-4 py-2 bg-white text-primary-600 font-medium rounded-lg hover:bg-gray-100 transition-colors"
              >
                Inscrever-se
              </button>
            </form>
          </div>
        </aside>
      </div>
    </div>
  </section>
</Base>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
