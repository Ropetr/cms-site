              <p class="text-gray-600">Estamos preparando conteúdo incrível para você.</p>
            </div>
          ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {posts.map((post, index) => (
                <article class={`group ${index === 0 ? 'md:col-span-2' : ''}`}>
                  <a href={`/blog/${post.slug}`} class="block">
                    <div class={`relative overflow-hidden rounded-xl ${index === 0 ? 'aspect-[2/1]' : 'aspect-video'}`}>
                      {post.featured_image ? (
                        <img
