---
export interface Props {
  title?: string;
  content: {
    text?: string;
    image_url?: string;
    image_alt?: string;
    cta_text?: string;
    cta_url?: string;
  };
  layout?: string;
  variant?: string;
}

const { title, content = {}, layout = 'media-left', variant = 'default' } = Astro.props;

const text = content.text || '';
const imageUrl = content.image_url || '';
const imageAlt = content.image_alt || title || '';
const ctaText = content.cta_text || '';
const ctaUrl = content.cta_url || '#';

const isMediaRight = layout === 'media-right';
---

<section class:list={['media-text', `variant-${variant}`]}>
  <div class="container mx-auto px-4">
    <div class:list={['grid', { 'media-right': isMediaRight }]}>
      <!-- Media -->
      <div class="media-column">
        {imageUrl && (
          <div class="media-wrapper">
            <img 
              src={imageUrl} 
              alt={imageAlt} 
              loading="lazy"
              decoding="async"
              width="600"
              height="400"
            />
          </div>
        )}
      </div>
      
      <!-- Text -->
      <div class="text-column">
        {title && <h2 class="section-title">{title}</h2>}
        <div class="prose" set:html={text} />
        
        {ctaText && (
          <a href={ctaUrl} class="cta-button">{ctaText}</a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .media-text {
    padding: 4rem 0;
  }
  
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .grid {
      grid-template-columns: 1fr 1fr;
    }
    
    .grid.media-right .media-column {
      order: 2;
    }
    
    .grid.media-right .text-column {
      order: 1;
    }
  }
  
  .media-wrapper {
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }
  
  .media-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-secondary);
  }
  
  .prose {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #4b5563;
    margin-bottom: 2rem;
  }
  
  .prose :global(p) {
    margin-bottom: 1rem;
  }
  
  .prose :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 1rem 0;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 2rem;
    background-color: var(--color-primary);
    color: white;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .cta-button:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
  }
  
  /* Variants */
  .variant-highlighted {
    background-color: #f9fafb;
  }
  
  .variant-dark {
    background-color: var(--color-secondary);
  }
  
  .variant-dark .section-title {
    color: white;
  }
  
  .variant-dark .prose {
    color: #d1d5db;
  }
</style>
