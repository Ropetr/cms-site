---
export interface Props {
  title?: string;
  content: {
    subtitle?: string;
    items?: Array<{
      icon?: string;
      title?: string;
      description?: string;
    }>;
  };
  layout?: string;
  variant?: string;
}

const { title, content = {}, layout = 'grid-3', variant = 'default' } = Astro.props;

const subtitle = content.subtitle || '';
const items = content.items || [];

// Determina n√∫mero de colunas baseado no layout
const columns = layout === 'grid-2' ? 2 : layout === 'grid-4' ? 4 : 3;
---

<section class:list={['features', `variant-${variant}`]}>
  <div class="container mx-auto px-4">
    {(title || subtitle) && (
      <div class="section-header">
        {title && <h2 class="section-title">{title}</h2>}
        {subtitle && <p class="section-subtitle">{subtitle}</p>}
      </div>
    )}
    
    <div class="features-grid" style={`--columns: ${columns}`}>
      {items.map((item: any) => (
        <div class="feature-card">
          {item.icon && (
            <div class="feature-icon">
              <span set:html={item.icon} />
            </div>
          )}
          {item.title && <h3 class="feature-title">{item.title}</h3>}
          {item.description && <p class="feature-description">{item.description}</p>}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    padding: 5rem 0;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: 1rem;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }
  
  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(var(--columns, 3), 1fr);
    }
  }
  
  .feature-card {
    text-align: center;
    padding: 2rem;
    border-radius: 1rem;
    background: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }
  
  .feature-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, var(--color-primary) 0%, color-mix(in srgb, var(--color-primary) 80%, black) 100%);
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
  }
  
  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
  }
  
  .feature-description {
    color: #6b7280;
    line-height: 1.6;
  }
  
  /* Variants */
  .variant-cards .feature-card {
    border: 1px solid #e5e7eb;
  }
  
  .variant-minimal .feature-card {
    box-shadow: none;
    background: transparent;
  }
  
  .variant-highlighted {
    background-color: #f9fafb;
  }
  
  .variant-dark {
    background-color: var(--color-secondary);
  }
  
  .variant-dark .section-title,
  .variant-dark .feature-title {
    color: white;
  }
  
  .variant-dark .section-subtitle,
  .variant-dark .feature-description {
    color: #9ca3af;
  }
  
  .variant-dark .feature-card {
    background: rgba(255, 255, 255, 0.05);
  }
</style>
